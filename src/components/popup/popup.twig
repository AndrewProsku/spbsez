<div class="b-popup" data-popup="{{ id }}">
    <div class="b-popup__overlay"></div>

    <div class="b-popup__wrap">
        <button class="b-popup__close" aria-label="{{ buttonAriaLabel|default('Закрыть всплывающее окно') }}">
            {#{{ source('/images/popup/close.svg') }}#}
        </button>

        <div class="b-popup__content">
            {{ content }}
        </div>
    </div>
</div>
