<div class="b-percent-title {{ modify }}">
    <div class="b-percent-title__top">
        <div class="b-percent-title__percent">{{ percent }}</div>
        {% if caption %}
            <div class="b-percent-title__caption">{{ caption }}</div>
        {% endif %}
    </div>

    <div class="b-percent-title__bottom">
        {% for item in items %}
            <div class="b-percent-title__item"><span>{{ item.percent }}</span> {{ item.text }}</div>
        {% endfor %}
    </div>
</div>
