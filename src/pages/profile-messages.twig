        <div class="b-title b-profile-message-title">
            <h1>Сообщения от ОЭЗ</h1>
        </div>

        <div class="b-message-filter">
            <div class="b-message-filter__mobile-date j-messages-select">
                {% include "../components/forms/select/select.twig" with {
                    id: "message-date",
                    name: "message-date",
                    options: [{
                        value: '2018',
                        text: '2018'
                    }, {
                        value: '2017',
                        text: '2017'
                    },{
                        value: '2016',
                        text: '2016'
                    },{
                        value: '2015',
                        text: '2015'
                    }]
                } %}
            </div>
            <div class="b-message-filter__date j-messages-tabs">
                {% include "../components/tabs/tabs-ajax.twig" with {
                    tabs: [{
                        href: "/tests/messages.json",
                        text: "2018",
                        year: "2018",
                        active: true
                    }, {
                        href: "/tests/messages-2017.json",
                        text: "2017",
                        year: "2017"
                    }, {
                        href: "/tests/messages.json",
                        text: "2016",
                        year: "2016"
                    }, {
                        href: "/tests/messages.json",
                        text: "2015",
                        year: "2015"
                    }]
                } %}
